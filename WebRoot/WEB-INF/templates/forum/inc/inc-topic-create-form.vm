<form id="form-create-topic" role="form" method="post">
    <div class="form-group">
    	<input id="title" name="title" type="text" class="form-control" required="required" placeholder="贴子标题" />
    </div>
    <div class="form-group">
    	<textarea id="topicContent" name="content" rows="5" required="required"></textarea>
    </div>
    <input type="hidden" name="forum" value="$forum.code" />
    <button type="submit" class="btn btn-lg btn-primary"><i class="glyphicon glyphicon-plus-sign"></i> 发表帖子</button>
</form>