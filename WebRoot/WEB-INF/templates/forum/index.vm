#set($title="论坛首页")
<div class="container">
	<div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="$ctx/index.htm"><i class="glyphicon glyphicon-hand-right"></i> 安众贷</a></li>
            <li>论坛首页</li>
        </ol>
		
		<div class="row forum_list">
			#foreach($forum in $ForumWebX.findValidForums())
    		<div class="col-xs-12 col-sm-6 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-body">
        				<h3 class="text-success"><img src="$ctx/public/img/forum_new.gif" /> $!forum.title</h3>
						<p><strong>权限：</strong>$!forum.openEnum.desp()</p>
        				<p><strong>说明：</strong>$!forum.summary</p>
						#set($users=$forum.forumUsers)
						#if(!$users.isEmpty())
                        <p><strong>版主：</strong>#foreach($user in $users) <a href="#">$user.nickName</a>&nbsp; #end</p>
						#end
                        <p><a href="$ctx/forum/forum.htm?code=$!forum.code" class="btn btn-primary" role="button"><i class="glyphicon glyphicon-fire"></i> 进入论坛 <i class="glyphicon glyphicon-forward"></i></a></p>
                    </div>
					#set($lastTopics=$ForumWebX.findForumLastTopics($forum.code))
					#if(!$lastTopics.isEmpty())
					<div class="list-group">
						#foreach($topic in $lastTopics)
                        <a href="$ctx/forum/topic.htm?id=$!topic.id" class="list-group-item"><span class="badge">$DateUtils.toStringDW($topic.gmtModify)</span><i class="fa fa-angle-right"></i> $!topic.title</a>
						#end
                    </div>
					#end
                </div>
            </div>
			#end
        </div>
    </div>
</div>
<style type="text/css">
.forum_list .panel-body {
	padding-top:0px;
	padding-bottom:0px;
}
</style>