##set($modal="ON")
<!-- Large modal -->
<button class="btn btn-primary" data-toggle="modal" data-target=".uitest-modal-lg">默认模态框</button>
<button class="btn btn-primary" data-toggle="modal" data-target=".uitest-modal-ajax" data-backdrop="static" href="ajax-modal.htm?ts=haha">Ajax模态框</button>

<div class="modal fade uitest-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <div class="modal-body">
				...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
function onModalSave(code, back) {
	$(".uitest-modal-sm .modal-title").html("原代码: " + code + ", 返回代码: " + back);
	$(".uitest-modal-sm").modal("toggle");
}
</script>

<div class="modal fade uitest-modal-ajax" tabindex="-1" role="dialog" aria-labelledby="uitest-modal-ajax" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            ...
        </div>
    </div>
</div>


